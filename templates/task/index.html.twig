{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="col p-5">
        <div class="text-center">
            <div class="form-group col text-center p-5">
                <form action="{{ path('create') }}" method="post" name="new_task">
                    <input type="text" name="name" class="form-control mb-3">
                    <button type="submit" name="submit">New task</button>
                </form>
            </div>
        </div>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Creation date</th>
                <th></th>
                <th></th>
            </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.date|date("m/d/Y H:i:s") }}</td>
                <td><a href="/edit/{{ task.id }}">Edit</a></td>
                <td><a href="/delete/{{ task.id }}">Delete</a></td>
            </tr>
        {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
